#xD;&#xA;            console.error(&#39;Failed to copy text: &#39;, err);&#xD;&#xA;          });&#xD;&#xA;        }&#xD;&#xA;      }&#xD;&#xA;    &lt;/script&gt;&#xD;&#xA;    &lt;/div&gt;&#xD;&#xA;    &lt;pre tabindex=&#34;0&#34; class=&#34;chroma&#34;&gt;&#xD;&#xA;      &lt;code class=&#34;language-cmd hljs&#34; data-lang=&#34;cmd&#34;&gt;ipconfig /all&lt;/code&gt;&#xD;&#xA;    &lt;/pre&gt;&#xD;&#xA;  &lt;/div&gt;&#xD;&#xA;&lt;/div&gt;&lt;/li&gt;&#xA;&lt;/ul&gt;&#xA;&lt;h3 id=&#34;otros-comandos-útiles&#34;&gt;Otros Comandos Útiles&lt;/h3&gt;&#xA;&lt;ul&gt;&#xA;&lt;li&gt;&lt;strong&gt;Información del sistema:&lt;/strong&gt;&#xA;&lt;div class=&#34;highlight&#34;&gt;&#xD;&#xA;  &lt;div class=&#34;code-block&#34;&gt;&#xD;&#xA;    &lt;div class=&#34;code-block__header&#34;&gt;&#xD;&#xA;      &lt;span class=&#34;code-block__lang&#34;&gt;CMD&lt;/span&gt;&#xD;&#xA;      &lt;button class=&#34;code-block__copybtn&#34; onclick=&#34;copyToClipboard(this)&#34;&gt;Copy&lt;/button&gt;&#xD;&#xA;    &lt;script&gt;&#xD;&#xA;      function copyToClipboard(button) {&#xD;&#xA;        const codeBlock = button.closest(&#39;.code-block&#39;).querySelector(&#39;code&#39;);&#xD;&#xA;        if (codeBlock) {&#xD;&#xA;          navigator.clipboard.writeText(codeBlock.textContent).then(() =&gt; {&#xD;&#xA;            alert(&#39;Code copied to clipboard!&#39;);&#xD;&#xA;          }).catch(err =&gt; {&#xD;&#xA;            console.error(&#39;Failed to copy text: &#39;, err);&#xD;&#xA;          });&#xD;&#xA;        }&#xD;&#xA;      }&#xD;&#xA;    &lt;/script&gt;&#xD;&#xA;    &lt;/div&gt;&#xD;&#xA;    &lt;pre tabindex=&#34;0&#34; class=&#34;chroma&#34;&gt;&#xD;&#xA;      &lt;code class=&#34;language-cmd hljs&#34; data-lang=&#34;cmd&#34;&gt;systeminfo&lt;/code&gt;&#xD;&#xA;    &lt;/pre&gt;&#xD;&#xA;  &lt;/div&gt;&#xD;&#xA;&lt;/div&gt;&lt;/li&gt;&#xA;&lt;li&gt;&lt;strong&gt;Apagar o reiniciar el sistema:&lt;/strong&gt;&#xA;&lt;div class=&#34;highlight&#34;&gt;&#xD;&#xA;  &lt;div class=&#34;code-bloc